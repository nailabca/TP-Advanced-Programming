def anagrams(word_a, word_b):
    # this sorts both words alphabetically
    return sorted(word_a) == sorted(word_b)

# user enters 2 words
word1 = input("Enter the first word : ").lower()
word2 = input("Enter the second word : ").lower()

# check if the words are anagrams using the function and print the result
if anagrams(word1, word2):
   print(f"The words {word1} and {word2} are anagrams.")
else:
   print(f"The words {word1} and {word2} are not anagrams.")


